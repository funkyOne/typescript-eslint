{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    // specifically disable declarations for the plugin
    "declaration": true,
    "declarationMap": true,
    "outDir": "./dist",
    "resolveJsonModule": true
  },
  "include": [
    "src",
    "typings",
    // include the parser's ambient typings because the parser exports them in its type defs
    "../parser/typings"
  ]
}
